<h1>Projects</h1>

<%= link_to "New Project", new_project_path %><br>
<% @projects.each do |proj| %>
  <br>
  <div>
	  <b>title:</b> <%= proj.title %><br>
  </div>
  <b>content:</b> <%= proj.content %><br>
  <b>owner:</b> <%= User.find(proj.owner_id).name %><br>
  <%= link_to("Edit", edit_project_path(proj.id)) %>
  <%= link_to "Delete", project_path(proj.id) , method: :delete, data: {confirm: "Are  you sure?"} %><br>
  ------------------------------------------------------
<% end %>
